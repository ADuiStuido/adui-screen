{
  "extends": "../../configs/tsconfig/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "noEmit": false,

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "preserve",
    "jsxImportSource": "vue",

    "stripInternal": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
