{
  "name": "adui-screen",
  "description": "Engine-oriented large-screen visualization framework for building scalable, maintainable big-screen dashboards (currently powered by CesiumJS).",
  "keywords": [
    "adui",
    "adui-screen",
    "large-screen",
    "big-screen",
    "dashboard",
    "visualization",
    "geospatial",
    "3d",
    "gis",
    "cesium",
    "cesiumjs",
    "engine-oriented",
    "vue",
    "vue3",
    "typescript",
    "monorepo",
    "turborepo"
  ],
  "homepage": "https://github.com/ADuiStuido/adui-screen#readme",
  "bugs": {
    "url": "https://github.com/ADuiStuido/adui-screen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ADuiStuido/adui-screen.git"
  },
  "license": "MIT",
  "author": "ADui",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "prettier": "^3.2.5",
    "turbo": "^2.7.3"
  }
}
